p=int(input("physics:"))
c=int(input("chemistry:"))
b=int(input("biology:"))
m=int(input("maths:"))
co=int(input("computer:"))
pr=(((p+c+b+m+co)/500)*100)
print("percentage:"+pr)
if pr>= 90 : 
   print("Grade A")
elif pr>=80:
   print("Grade B")
elif pr>=70:
   print("Grade C")
elif pr>=60:
   print("Grade D")
elif pr>=40:
    print("Grade E")
elif pr<40:
    print("Grade F")

11.
basic_salary=float(input("enter the salary"))
hra = 0                                                                    
da = 0     
if (basic_salary <= 10000):                                                   
      hra = (basic_salary *20 ) / 100                                        
      da = (basic_salary * 80) / 100                                         
elif(basic_salary<=20000):                                                                       
        hra = (basic_salary*25)/100                                                            
        da = (basic_salary * 90) / 100
elif(basic_salary>20000):                                                                       
        hra = (basic_salary*30)/100                                                            
        da = (basic_salary * 95) / 100
 print("gross_salary="+(basic_salary+hra+da))
 
12.
s = int(input())
b1 = 50*0.5
b2 = 100 * 0.75
b3 = 100 * 1.20
if(s<= 50):
  b = s *0.5
elif( s > 50 and s <= 150):
  b = b1+(s-50)*0.75
elif(s>150 and s<= 250):
  b = b1+b2+(s-150)*1.20
else:
  b= b1+b2+b3+(s-250)*1.50
b = b*0.20
print("Bill: ",b)
   

  
  
