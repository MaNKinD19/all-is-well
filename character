4.
a=int(input("enter the amount:"))
Q = [2000,1000,500, 200, 100, 50, 20, 10]
x = 0
for i in range(8):
    q = Q[i]
    x += int(a / q)
    a = int(a % q)
if a > 0:
    x = -1
print(x)

5.
print("enter the angles of triangle")
a=int(input("enter the 1st angle"))
b=int(input("enter the 2nd angle"))
c=int(input("enter the 3rd angle"))
d=a+b+c
if(d==180):
  print("valid triangle")
else:
  print("invalid triangle")   

6.
print("enter the sides of triangle")
a=int(input("enter the 1st side"))
b=int(input("enter the 2nd side"))
c=int(input("enter the 3rd side"))
if(((a+b)>c) and ((a+c)>b) and ((b+c)>a)):
  print("valid triangle")
else:
  print("invalid triangle")   


7.
print("enter the sides of triangle")
a=int(input("enter the 1st side"))
b=int(input("enter the 2nd side"))
c=int(input("enter the 3rd side"))
if((a==b) and (a==c) and (b==c)):
  print("equi traingle")
elif((a==b) or (a==c) or (b==c)):
  print(" isosceles triangle") 
else:
  print("scalene triangle")   


8.
print("Quadratic function : (a * x^2) + b*x + c")
a = float(input("a: "))
b = float(input("b: "))
c = float(input("c: "))
r = b**2 - 4*a*c
if r > 0:
    num_roots = 2
    x1 = (((-b) + sqrt(r))/(2*a))     
    x2 = (((-b) - sqrt(r))/(2*a))
    print("There are 2 roots: %f and %f" % (x1, x2))
elif r == 0:
    num_roots = 1
    x = (-b) / 2*a
    print("There is one root: ", x)
else:
    num_roots = 0
    print("No roots")


9.
s=int(input("enter the selling price:"))
c=int(input("enter the cost  price:"))
if s>c:
  print("profit"+(s-c))
elif c>s:
  print("loss"+(c-s))
else:
  print("nohing")

